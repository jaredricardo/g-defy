<script>
  function openCity(evt, cityName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("gd1-browse-tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("gd1-tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(cityName).style.display = "block";
    evt.currentTarget.className += " active";
  }
</script>

<style>
    /* Style the tab */
    .gd1-browse-tab {
  margin-top: 18px;margin-left: 18px;
      display: flex;
        align-items: stretch;
    }

    /* Style the buttons inside the tab */
    .gd1-browse-tab button {
     display: block;
        cursor: pointer;
        transition: all .3s;
        padding: 7px 25px;
        border-radius: 25px;
        color: #00212f;
        min-width: 150px;
        cursor: pointer;
        border: solid 1px #00212f;
        background-color: rgba(0, 0, 0, 0);
        text-align: center;
        font-size: 16px;
        pointer-events: auto;
        margin-right: 20px;
    }

    /* Change background color of buttons on hover */
    .gd1-browse-tab button:hover {
      background-color: #ddd;
    }

    /* Create an active/current tablink class */
    .gd1-browse-tab button.active {
      background-color: #00212f;
      color:#fff;
    }

    /* Style the tab content */
    .gd1-browse-tabcontent {
      display: none;
      padding: 6px 12px;

      border-top: none;
    }

    .gd1-browse-default{ display:block;}


