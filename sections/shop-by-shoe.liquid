<section class="shop-by-activity">
  <div class="shop-title-container">
    <h2 class="">Shop By Shoe Model</h2>
    <p class="">Shop By Shoe Style</p>
  </div>
  <div class="carosel-flex-container">
    {% for shoe in section.blocks %}
      <a href="">
        <div class="shop-img-carosel">
          <a href="{{ shoe.settings.item_link }}">
            <img
              src="{{ shoe.settings.image | img_url: '600x' }}"
              alt="{{ shoe.settings.title }}"
              class="img-shop-shoe"
            >
          </a>
          <div class="shop-title-container  img-shop-shoe-title">
            <a href="{{ shoe.settings.item_link }}">
              <b class="gd-blue-color">{{ shoe.settings.title }}</b>
            </a>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</section>
<style>
  .img-shop-shoe{
    max-width:250px;
        margin: 0 auto;
    display: block;
  }

    .img-shop-shoe-title{
      text-align:center;
    }
</style>
