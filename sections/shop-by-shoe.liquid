{
  "name": "shop-by-shoe",
  "settings": [],

    "presets": [
      {
        "name": "shop-by-shoe",
        "category": "Custom",
        "blocks": [

            {
        "type": "shoe",
        "settings": {
          "image": "",
          "title": "mighty walk",
          "item_link": "https://www.gravitydefyer.com/"
        }
      }
    ]
      }


    ],
  "blocks": [

  {
      "type": "shoe",
      "name": "Shoe",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Shoe Title"
        },
        {
          "type": "url",
          "id": "item_link",
          "label": "Item Link"
        }
      ]
    }

  ]
}
{% endschema %}
