<section class="shop-by-activity">
  <div class="shop-title-container">
    <h2 class="">Shop by Activity</h2>
    <p class="">Shop by your lifestyle</p>
  </div>
  <div class="carosel-flex-container">
    {% for activity in section.blocks %}
      <a href="">
        <div class="shop-img-carosel">
          <a href="{{ activity.settings.main_link }}">
            <img src="{{ activity.settings.image | img_url: '600x' }}" alt="{{ activity.settings.title }}">
          </a>
          <div class="shop-title-container">
            <a href="{{ activity.settings.main_link }}">
              <h2 class="gd-blue-color">{{ activity.settings.title }}</h2>
            </a>
            <div class="">
              <a href="{{ activity.settings.main_link }}"></a>
              <a href="{{ activity.settings.shop_women_link }}"><p class="title-shop-inline">Shop Women</p></a>
              <a href="{{ activity.settings.shop_men_link }}"><p class="title-shop-inline">Shop Men</p></a>
            </div>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

<style>
    .shop-img-carosel img{
      width:100%;
    }

    .shop-title-container {
        padding-left: 1%;text-align:left;
      color:var(--gd-blue);
    }



    .carosel-flex-container {
        display: flex;
        overflow: auto;
        margin-top: 20px;
        padding-bottom: 20px;
    }

    .shop-img-carosel {
        max-width: 353px;
        margin-bottom: 20px;
        min-width: 18vw;
    }

    .title-shop-inline {
        display: inline-block;
        margin-right: 14px;
        font-size: 14px;color:var(--gd-blue);
    }

      .shop-carosel-item, .shop-btn-carosel, .shop-img-carosel {
        flex: 0 0 auto;
        margin-left: 20px;
    }
    @media (max-width: 1200px) {
        .shop-img-carosel {
            min-width: 145px;
            margin-left: 10px;
            max-width: 180px;
        }

      .title-shop-inline {
            margin-right: 7px;
            font-size: 12px;
        }

    }

    .gd-blue-color{
      color:var(--gd-blue);
    }

      .shop-by-activity {
  max-width: 1600px;
      margin: 0 auto;
        padding: 25px 20px;

      }
      .shop-by-activity .heading {
        font-size: 2em;
        margin-bottom: 10px;
      }
      .shop-by-activity .subheading {
        font-size: 1.2em;
        color: #666;
        margin-bottom: 30px;
      }
      .activity-grid {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: center;
      }
      .activity-card {
        max-width: 300px;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 10px;
        background: #fff;
        padding: 15px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }
      .activity-card:hover {
        transform: translateY(-5px);
      }
      .activity-card img {
        width: 100%;
        border-radius: 10px;
        margin-bottom: 15px;
      }
      .activity-card h3 {
        font-size: 1.5em;
        margin: 10px 0;
      }
      .activity-card .links a {
        margin: 5px 10px;
        padding: 10px 15px;
        text-decoration: none;
        color: #fff;
        background-color: #007acc;
        border-radius: 5px;
        font-size: 0.9em;
      }
      .activity-card .links a:hover {
        background-color: #005f99;
      }
</style>

